<% include header %>
<div class="container">
    <h2 class="text-center">Novel Form</h2>
	<div class="row justify-content-center">
		<div class="col-12 col-md-8 col-lg-6 pb-5">


                    <!--Form with header-->

                    <form action="/novel/register" method="post">
                        <div class="card border-primary rounded-0">
                            <div class="card-header p-0">
                                <div class="bg-info text-white text-center py-2">
                                    <h3><i class="fa fa-envelope"></i> Novel</h3>
                                    <p class="m-0">Novel Field</p>
                                </div>
                            </div>
                            <div class="card-body p-3">

                                <!--Body-->
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                                        </div>
                                        <input type="text" class="form-control" id="nombre" name="novname" placeholder="Novel Name" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    
                                       <label for="validationCustom03">Select Writer</label>
                                        <select class="form-control form-control-lg" name="wirid" id="validationCustom03" onchange="ChangecatList()" required>
                                            <option value="">Choose... </option>
                                            <% docs.forEach(function(writerdata){ %>
                                        <option value="<%= writerdata.id  %>"><%= writerdata.firstName+  ' ' + writerdata.lastName%></option>
                                        <%  })  %>
                                    </select>
                                </div>
                                <div class="text-center">
                                    <input type="submit" value="Submit" class="btn btn-info btn-block rounded-0 py-2">
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
	</div>
</div>
<% include footer %>